@page
@model MyPortfolio.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Me";
}

<h1>Contact Me</h1>

<form method="post">
    <div>
        <label>Name:</label>
        <input type="text" asp-for="ContactInfo.Name" required />
    </div>
    <div>
        <label>Email:</label>
        <input type="email" asp-for="ContactInfo.Email" required />
    </div>
    <div>
        <label>Message:</label>
        <textarea asp-for="ContactInfo.Message" required></textarea>
    </div>
    <button type="submit">Send</button>
</form>
